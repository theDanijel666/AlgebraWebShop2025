@model AlgebraWebShop2025.Models.Product
@{
    ViewBag.Title = Model.Title;
}

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    @if(Model.Images.Count>0){
        <dl class="row">
            <dt class="col-sm-2"></dt>
            <dd class="col-sm-8">
                <div id="carouselExampleIndicators" class="carousel slide">
                    <div class="carousel-indicators">
                        @{
                            int counter = 0;
                            foreach(var img in Model.Images)
                            {
                                if (counter == 0)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@counter" 
                                    class="active" aria-current="true" aria-label="@img.Title"></button>
                                }
                                else
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@counter"
                                    aria-label="@img.Title"></button>
                                }
                                counter++;
                            }
                        }
                    </div>
                    <div class="carousel-inner">
                        @{
                            bool first = true;
                        }
                        @foreach(var img in Model.Images)
                        {
                            if (first)
                            {
                                first = false;
                                <div class="carousel-item active">
                                    <img src="@img.URL" class="d-block w-100" alt="@img.Title">
                                </div>
                            }
                            else{
                                <div class="carousel-item">
                                    <img src="@img.URL" class="d-block w-100" alt="@img.Title">
                                </div>
                            }
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
        </dd>
        <dt class="col-sm-2"></dt>
    </dl>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">

        </dt>
        <dd class="col-sm-10">
            @if (Model.Quantity > 0)
            {
                <form method="post" asp-controller="Cart" asp-action="AddToCart">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="number" name="quantity" value="1" /> &nbsp;
                    <input type="submit" class="btn btn-success btn-sm"
                           value="Add to cart" />
                </form>
            }
            else
            {
                <label class="btn btn-danger">Out of stock!</label>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Product">Back to Products</a>
</div>
